<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <ImageView
        android:layout_width="145dp"
        android:layout_height="145dp"
        android:background="@drawable/app_icon"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:id="@+id/imageView7" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Qkopy"
        android:id="@+id/heading"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textSize="28sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_app_info_1"
        android:layout_gravity="center"
        android:textStyle="normal"
        android:id="@+id/desc_one"
        android:textColor="@color/textColorGrey"
        android:layout_marginTop="8dp"
        android:textSize="16sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_app_info_2"
        android:layout_gravity="center"
        android:textStyle="normal"
        android:id="@+id/desc_two"
        android:textColor="@color/textColorGrey"
        android:layout_marginTop="1dp"
        android:textSize="16sp"/>

    <com.digits.sdk.android.DigitsAuthButton
        android:text="Get Started"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@color/colorAccent"
        android:layout_marginTop="45dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/start" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/terms_and_condition"
        android:text="@string/welcome_terms_and_condition"
        android:layout_gravity="center"
        android:textStyle="normal"
        android:textColor="@color/textColorGrey"
        android:layout_marginTop="8dp"
        android:textSize="12sp"/>
</LinearLayout>